<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnProvince"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnRap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDayNow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="16/11" />

            <Button
                android:id="@+id/btnDayTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17/11" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtRap1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rạp xiếc trung ương"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnChooseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:12"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:id="@+id/btnChooseTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:13"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtRap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rạp xiếc trung ương 2"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnChooseTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:12"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:id="@+id/btnChooseTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:13"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>